<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.android.nikhil.worldnow.data.model.main_news.Result"/>

        <variable
            name="viewModel"
            type="com.android.nikhil.worldnow.ui.news.NewsViewModal"/>

        <variable
            name="onItemClicked"
            type="com.android.nikhil.worldnow.utils.NewsItemClickListener"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical"
        android:onClick="@{(v) -> onItemClicked.onNewsClicked(v,item.webUrl)}">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.webTitle}"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/item_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.sectionName}"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.webPublicationDate}"
            android:padding="4dp"/>

    </LinearLayout>

</layout>

